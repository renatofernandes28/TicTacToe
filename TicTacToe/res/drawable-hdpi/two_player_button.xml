<corners
android:radius="100dp"
/>
<gradient
android:angle="45"
android:centerX="100%"
android:centerColor="#394FA8"
android:startColor="#E8E8E8"
android:endColor="#000000"
android:type="linear"
/>
<padding
android:left="0dp"
